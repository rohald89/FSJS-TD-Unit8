extends layout

block content
    h1 Books
    form(action='/books/search')
        p.search
            label(for="search") Search
            input(name="term" type="text" id="search")
        input(type='submit' value="Search")
    br
    p
        a.button(href="/books/new") Create New Book
    table
        thead
            tr
                th title
                th author
                th genre
                th year
        tbody
            each book in books
                tr
                    td
                        a(href='/books/' + book.id) #{book.title}
                    td= book.author
                    td= book.genre
                    td= book.year

